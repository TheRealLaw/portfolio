---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import errorImage from "../assets/error-page.jpeg";
---

<Layout title="Page Not Found | Leo Wuellner">
    <div class="w-full flex flex-col items-center gap-8 py-12">
        <!-- Image -->
        <div
            class="relative w-full max-w-2xl overflow-hidden rounded-lg shadow-lg"
        >
            <Image
                src={errorImage}
                alt="Page Not Found"
                class="w-full h-auto"
            />
        </div>

        <!-- Back to Home Button -->
        <a
            href="/"
            class="inline-block px-8 py-3 border-2 border-black text-black font-medium uppercase tracking-widest hover:bg-black hover:text-white transition-colors duration-300 rounded"
        >
            Back to Home
        </a>
    </div>
</Layout>
