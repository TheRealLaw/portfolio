---
import "../styles/global.css";
import Header from "../components/Header.astro";
import BackToTop from "../components/BackToTop.astro";

interface Props {
  title: string;
  heroImage?: ImageMetadata;
}

const { title, heroImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Leo Wuellner Photography Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto Condensed", sans-serif;
        background-color: #ffffff; /* Clean white background */
        color: #1a1a1a;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header heroImage={heroImage} />

    <main class="flex-grow w-full max-w-7xl mx-auto px-6 md:px-12 pb-20">
      <slot />
    </main>

    <footer
      class="w-full py-8 text-center text-gray-400 text-xs uppercase tracking-widest"
    >
      &copy; {new Date().getFullYear()} Leo Wuellner
    </footer>
    <BackToTop />
  </body>
</html>
